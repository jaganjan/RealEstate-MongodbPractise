@using System.Globalization
@model RealEstate.Rentals.RentalModel

@{

}

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-lg-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-lg-4">
                        <label class="label">Description</label>
                    </div>
                    <div class="col-lg-4">
                        @Model.Description;
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-4">
                        <label class="label">Price</label>
                    </div>
                    <div class="col-lg-4">
                        @Model.Price.ToString(CultureInfo.InvariantCulture);
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-4">
                       @Html.Label("AdjustPrice","Adjust Price",new {@class="label"})
                    </div>
                    <div class="col-lg-4">
                        @Html.TextBox("NewPrice");
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-4">
                       @Html.Label("Reason", "Adjust Price", new { @class = "label" })
                    </div>
                    <div class="col-lg-4">
                        @Html.TextBox("Reason");
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-5 col-md-10">
                        <input type="submit" value="AdjustPrice" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

