@using RealEstate.Rentals
@model IEnumerable<RealEstate.Rentals.RentalModel>

@{
    ViewData["Title"] = "Rental  Listings";
}

<h2>Rental Listings</h2>

<p>@Html.ActionLink("new item", "PostRental", "Home")</p>
<table class="table table-responsive table-striped">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>@Html.DisplayNameFor(model => model.NumberofRooms)</th>
        <th>@Html.DisplayNameFor(model => model.Address)</th>
        <th>@Html.DisplayNameFor(model => model.Price)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Description</td>
            <td>@item.NumberofRooms</td>
            <td>
                @if (item.Address != null && item.Address.Any())
                {
                    foreach (var s in item.Address)
                     {
                         <label>@s,</label>
                     }
                }

            </td>

            <td>@item.Price</td>
            <td>@Html.ActionLink("AdjustPrice", "AdjustPrice", "Home",new {id=item.Id})</td>
        </tr>
    }
</table>

